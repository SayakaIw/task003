<p id = "notice"></p>
<div class = "container">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class = "form-group">
          <label for = "user_name">Name</label>
          <%= f.text_field :name , class: 'form-control' %>
          <!--
          <input type="text" class="form-control" name="user[name]" id="user_name">
          -->
        </div>
        <div class = "form-group">
          <label for = "user_image">Image</label>
          <%= f.file_field :profile_image, class:'form-control-file user_image', accept: 'image/*' %>
          <!--
          <input class = "form-control-file user_image" accept="image/*" type="file" name="user[profile_image]" id="user_profile_image">
          -->
        </div>
        <div class = "form-group">
          <label for = "user_introduction">Introduction</label>
          <%= f.text_area :introduction , class: 'form-control' %>
<!--
          <textarea class = "form-control introduction" name="user[introduction]" id="user_introduction"></textarea>
          -->
        </div>
        <div class = "form-group">
          <input type = "submit" name="commit" value="Update User" class="btn btn-secondary" date-disable-with="Update User">
        </div>
      <% end %>

    </div>
  </div>
</div>