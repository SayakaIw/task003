<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render'books/list',user: @user %>

      <h2>User info</h2>
      <table class="table"></table>
      <div class="row"></div>
      <h2 class="mt-3">New book</h2>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @book.each do |book| %>
        <tbody>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>