
<div class="container">
    <% if @book.errors.any? %>
        <%= @book.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
     <% end %>

    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing Book</h1>
                <%= form_with model: @book, method: :patch do |f| %>

                    <div class ="form-group">
                        <label for="book_title">Title</label><br>
                        <%= f.text_field :title, style:"width:100%" %>
                    </div>
                    <div class="form-group">
                        <label for="book_body">Opinion</label><br>
                        <%= f.text_area :body, style:"width:100%" %>
                    </div>
                    <%= f.submit "Update Book", class: "btn btn-success" %>
                <% end %>

            <%= link_to "Show", book_path(@book) %>|
            <%= link_to "Back", books_path %>
        </div>
    </div>
</div>